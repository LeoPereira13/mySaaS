generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  schedules Schedule[]
}

model Schedule {
  id          String   @id @default(uuid()) @db.Uuid
  userId      String
  eventName   String   // Campo necess√°rio para o nome do evento
  startTime   DateTime
  endTime     DateTime
  description String?
  
  user        User     @relation(fields: [userId], references: [id])
}
